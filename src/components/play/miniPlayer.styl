@import '../../assets/css/fun'
.mini-player
  position fixed
  bottom 0
  background-color rgb(255, 255, 255)
  z-index 999
  height rem(145)
  width 100%
  border-top 1px solid rgb(234,234,234)
  // display flex
  justify-content space-around
  align-items center
  font-size rem(32)
  padding 0 rem(18)
  box-sizing border-box
  .mini-image
    width rem(114)
    height rem(114)
    border-radius 50%
  .mini-title
    flex 1
    padding-left rem(10) 
  .iconfont
    &.icon
      text-align right 
      flex 0 0 rem(130)
      font-size rem(80)
