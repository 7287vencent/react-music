@import '../../assets/css/fun'
.find-recommend
  width 100%
  height 100%
.banner-swiper
  height 160px
  position relative
  overflow hidden
  .swiper-slide
    width 100%
    padding 0 rem(48px)
    box-sizing border-box
  .slider-nav
    display block
    width 100%
    height 100%
    img 
      border-radius 8px
  .swiper-pagination-bullet-active
    background-color: rgba(255,57,70,.8)

.find-select
  width 100%
  display flex
  font-size rem(32px)
  padding-bottom hrem(57px)
  border-bottom 1px solid rgba(244, 244, 244, 1)
  .select-item
    width 20%
    padding hrem(56px) rem(42px) 0
    box-sizing border-box
    text-align center
    .img 
      width rem(134px)
      height rem(134px)
      border-radius 50%
      background-color red
      margin-bottom hrem(28px)
      position relative
      img 
        width rem(66px)
        height rem(66px)
        position absolute
        left 50%
        top 50%
        transform translate(-50%, -50%)  
        border-radius 5px      
    .title
      color rgba(100, 100, 100, 1)

.find-playList
  width 100%
  padding hrem(72px) rem(48px) 0
  box-sizing border-box
  .playList-title
    position relative
    margin-bottom hrem(57)
    h1 
      font-size rem(50)
    .playList-square
      font-size rem(34)
      position absolute
      width rem(204)
      height hrem(74)
      line-height hrem(74)
      border 1px solid rgb(234, 234, 234)
      border-radius rem(30px)
      text-align center
      right 0
      top rem(-12)

.playList-container
  width 100%
  box-sizing border-box
  display flex
  flex-wrap wrap
  .play-item
    width 33.3333%
    flex-shrink 1
    padding 0 rem(15) 
    box-sizing border-box
    font-size rem(32)
    .img-count
      width rem(306)
      height hrem(308)
      padding-bottom hrem(20)
      position relative
      img 
        width 100%
        height 100%
      .count
        position absolute
        right 0
        top 0
        color #fff
    .play-name
      position relative
      margin-bottom hrem(64)

